<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_step_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_bg"
    android:padding="@dimen/padding_small">

    <ListView
        android:id="@+id/recipe_ingredients_list"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ingredient_list_height"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="@dimen/scrollbar_size" />

    <TextView
        android:id="@+id/recipe_step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toStartOf="@id/recipe_step_more_btn"
        android:layout_toLeftOf="@id/recipe_step_more_btn"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        tools:text="@string/dummy_recipe_step_text" />

    <ImageView
        android:id="@+id/recipe_step_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/chevron_img_cont_desc"
        android:src="@drawable/ic_chevron_right" />

</RelativeLayout>